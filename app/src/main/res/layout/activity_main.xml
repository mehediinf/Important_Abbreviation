<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#363B61"
    android:weightSum="16"
    tools:context=".MainActivity">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="15"
        android:gravity="center"
        >
        <Button
            android:id="@+id/network_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Subject_Name_1"
            android:onClick="clickMessage"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="bold"

            />

        <Button
            android:onClick="clickMessage"
            android:id="@+id/dataCommunication_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Subject_Name_2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="bold"

            />

        <Button
            android:onClick="clickMessage"
            android:id="@+id/sequentialLogic_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Subject_Name_3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="bold"

            />



    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Â©Copyright By Mehedi Hasan"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="#888"
        android:textStyle="bold"
        android:textSize="10dp"

        />


</LinearLayout>